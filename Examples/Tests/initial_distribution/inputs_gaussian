#################################
####### GENERAL PARAMETERS ######
#################################
max_step             = 0
amr.n_cell           = 8 8 8
amr.max_grid_size    = 8
amr.blocking_factor  = 8
amr.max_level        = 0
geometry.coord_sys   = 0
geometry.is_periodic = 1 1 1
geometry.prob_lo     = 0.0 0.0 0.0
geometry.prob_hi     = 1.0 1.0 1.0
warpx.do_pml         = 0
amr.plot_int         = 1000

#################################
############ NUMERICS ###########
#################################
warpx.verbose = 1
warpx.cfl     = 1.0

#################################
############ PLASMA #############
#################################
particles.nspecies      = 1
particles.species_names = e
e.charge                     = -q_e
e.mass                       = m_e
e.injection_style            = "NRandomPerCell"
e.num_particles_per_cell     = 1000
e.profile                    = constant
e.density                    = 1.0e21
e.momentum_distribution_type = "gaussian"
e.ux_th                      = 0.01
e.uy_th                      = 0.01
e.uz_th                      = 0.01

#################################
########## DIAGNOSTIC ###########
#################################
warpx.reduced_diags_names              = hx hy hz

hx.type                                 = ParticleHistogram
hx.frequency                            = 1
hx.path                                 = "./"
hx.species                              = e
hx.bin_number                           = 50
hx.bin_min                              = -1.2e7
hx.bin_max                              = +1.2e7
hx.histogram_function(t,x,y,z,ux,uy,uz) = "ux"
hx.normalization                        = max_to_unity

hy.type                                 = ParticleHistogram
hy.frequency                            = 1
hy.path                                 = "./"
hy.species                              = e
hy.bin_number                           = 50
hy.bin_min                              = -1.2e7
hy.bin_max                              = +1.2e7
hy.histogram_function(t,x,y,z,ux,uy,uz) = "uy"
hy.normalization                        = max_to_unity

hz.type                                 = ParticleHistogram
hz.frequency                            = 1
hz.path                                 = "./"
hz.species                              = e
hz.bin_number                           = 50
hz.bin_min                              = -1.2e7
hz.bin_max                              = +1.2e7
hz.histogram_function(t,x,y,z,ux,uy,uz) = "uz"
hz.normalization                        = max_to_unity
